<?xml version="1.0" encoding="UTF-8"?>
<!-- Don't forget to set system property
-DLog4jContextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector
     to make all loggers asynchronous. -->
<!--日志级别以及优先级排序: OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL -->
<!--Configuration后面的status，这个用于设置log4j2自身内部的信息输出，可以不设置，当设置成trace时，你会看到log4j2内部各种详细输出-->
<!--monitorInterval：Log4j能够自动检测修改配置 文件和重新配置本身，设置间隔秒数-->
<Configuration status="FATAL" monitorInterval="300">
    
    <properties>
        <property name="LOG_HOME">/data/logs</property>
        <property name="ERROR_LOG_FILE_NAME">slow-loris-platform</property>
    </properties>
    
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8"
                           pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p] projectName : slow-loris-platform-console   [%t] (%c:%L) -  %m%n"/>
            <Filter type="MarkerFilter" marker="EXCEPTION" onMatch="DENY" onMismatch="ACCEPT"/>
        </Console>
        
        <File name="app_file_error" fileName="${LOG_HOME}/slow-loris-error.log" append="false">
            <Filters>
                <ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout charset="UTF-8"
                           pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p] projectName : slow-loris-platform-error   [%t] (%c:%L) - %m%n"/>
        </File>
        <!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
        <RollingRandomAccessFile name="app_file_all"
                                 fileName="${LOG_HOME}/${ERROR_LOG_FILE_NAME}.log"
                                 filePattern="${LOG_HOME}/${ERROR_LOG_FILE_NAME}.%d{yyyy-MM-dd}-%i.log.gz"
                                 immediateFlush="false">
            <PatternLayout charset="UTF-8"
                           pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p] projectName : slow-loris-platform   [%t] (%c:%L) -  %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
                <SizeBasedTriggeringPolicy size="2 GB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingRandomAccessFile>
    </Appenders>
    
    <Loggers>
        <!--mybatis使用DEBUG输出控制台（生产注释掉控制台日志）-->
        <AsyncLogger name="org.apache.ibatis" level="debug" includeLocation="true">
            <AppenderRef ref="console"/>
        </AsyncLogger>
        
        <AsyncRoot level="debug" includeLocation="true">
            <!--生产注释掉控制台日志-->
            <AppenderRef ref="console"/>
            
            <AppenderRef ref="app_file_all"/>
            <AppenderRef ref="app_file_error"/>
        </AsyncRoot>
    </Loggers>

</Configuration>
